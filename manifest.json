{
    "manifest_version": 2,
    "name": "Scripture Lock",
    "version": "1.0",
    "description": "Redirects users out of other pages until a page of scripture is read.",
    "icons":{
        "48": "icons/scripture.jpg"
    },
    "background": {
        "scripts": ["scripture_lock.js"]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
}